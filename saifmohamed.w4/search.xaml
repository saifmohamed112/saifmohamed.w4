        <Button Grid.Column="2" Content="delete page" HorizontalAlignment="Left" Margin="330,35,0,0" Grid.Row="1" VerticalAlignment="Top" Height="31" Width="115" FontWeight="Bold" FontSize="18" Click="Button_Click"/>
    </Grid>
